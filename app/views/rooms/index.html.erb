<h1>Listing rooms</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Is booked</th>
      <th>Classification</th>
      <th>Capacity</th>
      <th>Booking</th>
      <th>Venue</th>
      <th>Amenities</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.is_booked %></td>
        <td><%= room.classification %></td>
        <td><%= room.capacity %></td>
        <td><%= room.booking_id %></td>
        <td><%= room.venue_id %></td>
        <td><%= room.amenities %></td>
        <td><%= room.description %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

